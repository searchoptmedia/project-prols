{% block css %}
    <style>
        .select2-results__option[aria-selected=true] {
            display: none;
        }

        .custom-timeline-1 {
            width: 100%;
            max-width: 800px;
            background: #fff;
            padding: 30px 10px;
            position: relative;
        }

        .custom-timeline-1:before {
            content: '';
            position: absolute;
            top: 0px;
            left: calc(33% + 15px);
            bottom: 0px;
            width: 4px;
            background: #ddd;
        }

        .custom-timeline-1:after {
            content: "";
            display: table;
            clear: both;
        }

        .custom-timeline-1 .entry {
            clear: both;
            text-align: left;
            position: relative;
        }

        .custom-timeline-1 .entry .title {
            margin-bottom: .5em;
            float: left;
            width: 33%;
            padding-right: 30px;
            text-align: right;
            position: relative;
        }

        .custom-timeline-1 .entry .title:before {
            content: '';
            position: absolute;
            width: 8px;
            height: 8px;
            border: 6px solid salmon;
            background-color: #fff;
            border-radius: 100%;
            top: 15%;
            right: -20px;
            z-index: 99;
        }

        .custom-timeline-1 .entry .title h3 {
            margin: 0;
            font-size: 90%;
        }

        .custom-timeline-1 .entry .title p {
            margin: 0;
            font-size: 80%;
        }

        .custom-timeline-1 .entry .body {
            margin: 0 0 1em;
            float: right;
            width: 66%;
            padding-left: 30px;
        }

        .custom-timeline-1 .entry .body p {
            line-height: 1.4em;
        }

        .custom-timeline-1 .entry .body p:first-child {
            margin-top: 0;
            font-weight: 400;
        }

        .custom-timeline-1 .entry .body ul {
            color: #aaa;
            padding-left: 0;
            list-style-type: none;
        }

        .custom-timeline-1 .entry .body ul li:before {
            content: "–";
            margin-right: .5em;
        }

        .event-status {
            padding: 3px 0px;
            border-radius: 100px;
        }

        /*EDIT STARTS HERE*/

        .arrow {
            border: solid black;
            border-width: 0 3px 3px 0;
            display: inline-block;
            padding: 3px;
            margin: 3px;
        }

        .up {
            transform: rotate(-135deg);
            -webkit-transform: rotate(-135deg);
        }

        .down {
            transform: rotate(45deg);
            -webkit-transform: rotate(45deg);
        }

        .search {
            width: 100%;
            position: relative;
        }

        .searchTerm {
            float: left;
            width: 100%;
            border: 3px solid #ffffff;
            padding: 5px;
            height: 20px;
            border-radius: 5px;
            outline: none;
            color: #ffffff;
        }

        .searchTerm:focus {
            color: #ffffff;
            background: rgba(225, 225, 225, 0.11);
        }

        .searchButton {
            position: absolute;
            right: -50px;
            width: 40px;
            height: 36px;
            border: 1px solid #ffffff;
            background: #ff9800;
            text-align: center;
            color: #fff;
            border-radius: 5px;
            cursor: pointer;
            font-size: 20px;
        }

        .wrap {
            width: 30%;
            position: absolute;
            top: 68%;
            left: 60%;
            float: right;
            transform: translate(-50%, -50%);
        }

        .pagination {
            display: inline-block;
            padding-left: 0;
            margin: 20px 50px 0px 0px;
            border-radius: 4px;
            float: right;
        }

        .current {
            background-color: #039be5;
            font-family: "Century Gothic Bold";
            border: 1px solid white;
            color: #ffffff;
            font-weight: bold;
            font-style: normal;
        }

        .pagination > * {
            display: inline-block;
            width: 30px;
            height: 30px;
            border-radius: 2px;
            line-height: 30px;
            text-align: center;
            vertical-align: middle;
        }

        .next {
            width: auto;
            padding: 0 8px;
            border: none;
        }

        .prev {
            width: auto;
            padding: 0 8px;
            border: none;
        }

        .news a {
            color: #E11C24;
        }

        .pagination a {
            color: #000000;
        }

        .event-management-select {
            display: inline-block;
            width: 35%;
        }

        .select-row-label {
            display: inline-block;
        }

        .management-row-selector {
            margin: 15px 0px 0px 50px;
            display: inline-block;
            width: 20%;
        }

        .not-going{
