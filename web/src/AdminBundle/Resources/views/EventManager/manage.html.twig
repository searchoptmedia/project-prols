        function saveEvent(id) {
            var eventType = $(cmbEventType).val(), error = false;
            var data = {
                event_id: id,
                event_name: $(txtEventName).val(),
                event_desc: $(txtEventDesc).val(),
                event_venue: $(txtEventVenue).val(),
