                {
                  if(data.status == 401){
                      $('.time-in-container').hide();
                      $('.timeout-container').hide();
                      $('.modal-logout-notify-container').show();
                  }
                }).always(function(data){
                    $('.loader-notif').hide();
                    $('.loader-notif').css({'top' : '-55px'});
                });



       });
