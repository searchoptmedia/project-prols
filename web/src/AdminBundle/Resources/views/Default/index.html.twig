var pass = ''

$('.time-btn').click(function(e){
            e.preventDefault();
            var message = $('#diffip-input-reason').val(), error = false,
                    user_ip =  $('#time-in-button').data('ip'),
                    is_message = undefined, action = $(this).data('action'), pass;
            if(user_ip == 0){
                if(message == ''){
                    $('#diffip-input-reason').css({'border-color': '#f44336'});
