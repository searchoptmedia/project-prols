{% import 'AdminBundle:Templates:notification.html.twig' as notif %}

<!DOCTYPE html>
<html>
<head>
    <title>{{ block('title')|default('Requests') }} | PROLS</title>
    <!--Import Google Icon Font-->
    <link href="http://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet">
    <!--Import materialize.css-->
    <link rel="stylesheet" href="{{ asset('prols2/css/style.css') }}" media="all"/>
    <link rel="stylesheet" href="{{asset('prols2/css/_extend-style.css')}}" media="all"/>
    <!--Let browser know website is optimized for mobile-->
    <meta name="viewport" content="width=device-width, initial-scale=1.0"/>

    <style>
        .login-form {
            padding: 10px;
        }
    </style>
    {% block style %}{% endblock %}
</head>

<body class="login-2">
{% block image %}
    <div class="img-container center-align" style=""><img class="main-logo"
                                                          src="{{ asset('prols2/img/propelrrlogo.png') }}" width="150px"
                                                          alt=""></div>{% endblock %}
{% block body %}
    <div class="login-form">
        <div class="form">
            <div class="z-depth-2 login-form-2">
                {% block content %}{% endblock %}
            </div>
        </div>
    </div>
{% endblock %}

{{ notif.top_notification }}

<!--Import jQuery before materialize.js-->
<script src="{{asset('prols2/js/jquery.min.js')}}"></script>
<script type="text/javascript" src="{{asset('prols2/js/plugins/bootstrap/bootstrap.min.js')}}"></script>
<script type="text/javascript" src="{{ asset('prols2/js/script.js') }}"></script>
{% block javascript %}{% endblock %}
</body>
</html>
